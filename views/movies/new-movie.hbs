<div>

  <h3>Crear Pelicula</h3>

  <div>
    <form action="/celebrities/create" method="post">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="Terminator"/>
      <br />
      <label for="genre">Genre</label>
      <input type="text" name="genre" placeholder="Accion"/>
      <br />
      <label for="plot">Plot</label>
      <input type="text" name="plot" placeholder="Robots del futuro destruyen la tierra"/>
      <br />
      <label for="celebrity">Cast</label>

        <select name="Celebrity" multiple>
            {{#each this.allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
      <br />

        <button>Crear</button>
    </form>
  </div>
</div>
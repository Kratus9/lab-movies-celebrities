<div>

  <h3>Editar Pelicula</h3>

  <div>
    <form action="/movies/{{this.movie._id}}/edit" method="post">
      <label for="title">Title</label>
      <input type="text" name="title" value="{{this.movie.title}}"/>
      <br />
      <label for="genre">Genre</label>
      <input type="text" name="genre" value="{{this.movie.genre}}"/>
      <br />
      <label for="plot">Plot</label>
      <input type="text" name="plot" value="{{this.movie.plot}}"/>
      <br />
      <label for="cast">Cast</label>

        <select name="cast" multiple>
            {{#each this.allCelebrities}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
      <br />
        
            <button>Guardar cambios</button>

    </form>
  </div>
</div>